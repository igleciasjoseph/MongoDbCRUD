<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css")
        title Edit Animal
    body.container.text-center
        h1 Edit below
        form(action="/animals/" + animal._id method="post").mb-5
            div.form-group
                label Name:
                div
                    input(type="text" name="name" placeholder=animal.name)
            div.form-group
                label Type Of Animal:
                div
                    input(type="text" name="typeOf" placeholder=animal.typeOf)
            div.form-group
                label Color:
                div
                    select(name="color")
                        option Red
                        option Blue
                        option Orange
                        option Green
                        option Black
                        option Gray
                        option White
            div.form-group
                label Age:
                div
                    input(type="number" name="age" placeholder=animal.age)
            input(type="submit" value="Submit")
        a(href="/").btn.btn-primary Back Home